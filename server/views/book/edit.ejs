<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="offset-col-1 col-11">
            <h1><%= title %></h1>
            <br>
            <form action="/book-list/edit/<%= _id %>" method="post">
            <div class="row">
                <div class="col-2">
                    <label> Book name : </label>
                </div>
                <div class="col-3 text-right">
                    <input type="text" class="input input-tx" name="book_name" value="<%= book.name %>" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label> Book Author : </label>
                </div>
                <div class="col-3 text-right">
                    <input type="text" class="input input-tx" name="book_author" value="<%= book.author %>" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label> Book Published : </label>
                </div>
                <div class="col-3 text-right">
                    <input type="text" class="input input-tx" name="book_published" value="<%= book.published %>" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label> Book Description : </label>
                </div>
                <div class="col-3 text-right">
                    <input type="text" class="input input-tx" name="book_description" value="<%= book.description %>" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label> Book Price : </label>
                </div>
                <div class="col-3 text-right">
                    <input type="text" class="input input-tx" name="book_price" value="<%= book.price %>" />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-5 text-right">
                    <button type="submit" class="btn btn-primary mb-2">
                        <i class="fas fa-plus-circle"></i> UPDATE
                    </button>                        
                </input>
                </div>
            </div>
            
        </div>
    </div>
</main>

